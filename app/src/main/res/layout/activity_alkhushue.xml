<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/back_text"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="?actionBarSize"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:src="@drawable/arrowforward_white" />

                <TextView
                    android:id="@+id/tv_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_back"
                    android:text="@string/alkhushue_settings"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/ll_fajer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:id="@+id/llfRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="10dp"
                        android:text="مدة ظهور شاشة الخشوع للفجر"
                        android:textSize="@dimen/spinner_text_size" />

                    <NumberPicker
                        android:id="@+id/np_fajer"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:theme="@style/NumberPickerText" />

                </LinearLayout>

                <EditText
                    android:id="@+id/ed_fajer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="نص شاشة الخشوع للفجر"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textColorHint="@color/lb_grey"
                    android:textSize="@dimen/spinner_text_size" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/ll_sun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:visibility="gone"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="20dp">

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_sun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="center_vertical|right"
                    android:text="ظهور شاشة الخشوع لصلاة الضحى"
                    android:textSize="22sp" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="10dp"
                        android:text="مدة ظهور شاشة الخشوع للضحى"
                        android:textSize="@dimen/spinner_text_size" />

                    <NumberPicker
                        android:id="@+id/np_sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:theme="@style/NumberPickerText" />

                </LinearLayout>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/ed_sun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="نص شاشة الخشوع للضحى"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textColorHint="@color/lb_grey"
                    android:textSize="@dimen/spinner_text_size" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/ll_thahr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="10dp"
                        android:text="مدة ظهور شاشة الخشوع للظهر"
                        android:textSize="@dimen/spinner_text_size" />

                    <NumberPicker
                        android:id="@+id/np_thahr"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:theme="@style/NumberPickerText" />

                </LinearLayout>


                <EditText
                    android:id="@+id/ed_thahr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="نص شاشة الخشوع للظهر"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textColorHint="@color/lb_grey"
                    android:textSize="@dimen/spinner_text_size" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/ll_asr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="10dp"
                        android:text="مدة ظهور شاشة الخشوع للعصر"
                        android:textSize="@dimen/spinner_text_size" />

                    <NumberPicker
                        android:id="@+id/np_asr"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:theme="@style/NumberPickerText" />

                </LinearLayout>

                <EditText
                    android:id="@+id/ed_asr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="نص شاشة الخشوع للعصر"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textColorHint="@color/lb_grey"
                    android:textSize="@dimen/spinner_text_size" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/ll_magrb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="10dp"
                        android:text="مدة ظهور شاشة الخشوع المغرب"
                        android:textSize="@dimen/spinner_text_size" />

                    <NumberPicker
                        android:id="@+id/np_mg"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:theme="@style/NumberPickerText" />

                </LinearLayout>

                <EditText
                    android:id="@+id/ed_magrb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="نص شاشة الخشوع للمغرب"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textColorHint="@color/lb_grey"
                    android:textSize="@dimen/spinner_text_size" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/ll_isha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="10dp"
                        android:text="مدة ظهور شاشة الخشوع العشاء"
                        android:textSize="@dimen/spinner_text_size" />

                    <NumberPicker
                        android:id="@+id/np_ish"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:theme="@style/NumberPickerText" />

                </LinearLayout>

                <EditText
                    android:id="@+id/ed_isha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="نص شاشة الخشوع للعشاء"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textColorHint="@color/lb_grey"
                    android:textSize="@dimen/spinner_text_size" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Button
                android:layout_margin="10dp"
                android:id="@+id/btn_save"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/back_text"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
