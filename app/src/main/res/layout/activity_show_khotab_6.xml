<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_azkar_show_6"
    tools:context=".activity.ShowKhotabActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/background_jm3a_word_6" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="170dp"
            android:adjustViewBounds="true"
            android:fontFamily="@font/khalid_art_bold"
            android:gravity="center"
            android:text=" "
            android:textColor="#BF1414"
            android:textSize="43sp" />

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="190dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUrdTextTitel"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:fontFamily="@font/khalid_art_bold"
                android:gravity="center"
                android:text=""
                android:textColor="#BF1414"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvFarTextTitel"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:fontFamily="@font/khalid_art_bold"
                android:gravity="center"
                android:text=""
                android:textColor="#BF1414"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvEnTextTitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:fontFamily="@font/khalid_art_bold"
                android:gravity="center"
                android:text=""
                android:textColor="#BF1414"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <VideoView
                    android:id="@+id/vvAdsVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:keepScreenOn="true"
                    android:visibility="gone" />

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="30dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvEnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="85dp"
                android:fontFamily="@font/tahoma"
                android:gravity="center"
                android:text=""
                android:textColor="#BF1414"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/tvUrdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="85dp"
                android:fontFamily="@font/nirmala"
                android:gravity="center"
                android:text=""
                android:textColor="#BF1414"
                android:textSize="42sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvFarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="85dp"
                android:gravity="center"
                android:text=""
                android:textColor="#BF1414"
                android:textSize="42sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/background_data_6"
                android:layout_height="155dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_data_hajre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/century_gothic_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="20 ذو القعدة"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_data_melade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/century_gothic_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="12 فبراير - "
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/century_gothic_bold"
                        android:gravity="center"
                        android:text="12:25"
                        android:textColor="#F40906"
                        android:textSize="65sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/century_gothic_bold"
                        android:gravity="bottom|center"
                        android:text="25"
                        android:textColor="#F40906"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="180dp"
                android:background="@drawable/background_pray_6"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/faje_azkar_6" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="-9dp"
                    android:id="@+id/tv_fajr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana_bold"
                    android:gravity="center"
                    android:text="5:12"
                    android:textColor="#ffcc52"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:background="@drawable/background_pray_6"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shroq_azkar_6" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="-9dp"
                    android:id="@+id/tv_sun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana_bold"
                    android:gravity="center"
                    android:text="5:12"
                    android:textColor="#ffcc52"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:background="@drawable/background_pray_6"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/thahr_azkar_6" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="-9dp"
                    android:id="@+id/tv_thahr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana_bold"
                    android:gravity="center"
                    android:text="5:12"
                    android:textColor="#ffcc52"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:background="@drawable/background_pray_6"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/asr_azkar_6" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="-9dp"
                    android:id="@+id/tv_asr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana_bold"
                    android:gravity="center"
                    android:text="5:12"
                    android:textColor="#ffcc52"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:background="@drawable/background_pray_6"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mgrb_azkar_6" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="-9dp"
                    android:id="@+id/tv_magrb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana_bold"
                    android:gravity="center"
                    android:text="5:12"
                    android:textColor="#ffcc52"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:background="@drawable/background_pray_6"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/isha_azkar_6" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="-9dp"
                    android:id="@+id/tv_isha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana_bold"
                    android:gravity="center"
                    android:text="5:12"
                    android:textColor="#ffcc52"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/img_bottom"
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/background_buttom_main"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">
            <!--        <ImageView-->
            <!--            android:id="@+id/img_bottom"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginLeft="70dp"-->
            <!--            android:layout_marginRight="70dp"-->
            <!--            android:adjustViewBounds="true"-->
            <!--            android:src="@drawable/background_buttom_main" />-->

            <TextView
                android:id="@+id/tv_masged_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/al_hurra_txtreg_bold"
                android:gravity="center"
                android:text="اسم المسجد "
                android:textColor="#5B3104"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/background_day"
        android:fontFamily="@font/khalid_art_bold"
        android:gravity="center"
        android:text="الأربعاء"
        android:textColor="#213F19"
        android:textSize="60sp"
        android:textStyle="bold" />

</RelativeLayout>